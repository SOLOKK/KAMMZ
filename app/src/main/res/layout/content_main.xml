<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:background="@android:color/background_light"
    tools:context="com.example.me.KAMMZ.MainActivity">


    <TextView
        android:text="Patient"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"

        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/p"
        android:layout_alignStart="@+id/p"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/patient"
        android:id="@+id/p"
        android:src="@drawable/patient"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="Doctor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold|italic"

        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/p"
        android:id="@+id/imageView"
        android:src="@drawable/p"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="The KAMMZ Clinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"

        android:textColor="#DB7093"
        android:textSize="34sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/doctor"
        android:id="@+id/d"
        android:src="@drawable/doctor"
        android:scrollbarSize="10dp"
        android:layout_alignBottom="@+id/p"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
